{
  "name": "@nandu/cli",
  "description": "Nandu Open NPM Registry CLI",
  "version": "1.0.0",
  "author": "@taskforcesh",
  "bin": {
    "nandu": "./bin/run"
  },
  "bugs": "https://github.com/taskforcesh/nandu/issues",
  "dependencies": {
    "@nandu/service": "workspace:*",
    "@npmcli/config": "^2.4.0",
    "@oclif/core": "^3.19.2",
    "axios": "^1.9.0",
    "cli-ux": "^6.0.9"
  },
  "devDependencies": {
    "@oclif/test": "^3.0.0",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.2",
    "chai": "^4.3.6",
    "eslint": "^8.56.0",
    "eslint-config-oclif": "^5.0.0",
    "eslint-config-oclif-typescript": "^3.0.40",
    "globby": "^10.0.2",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "oclif": "^4.1.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/taskforcesh/nandu",
  "keywords": [
    "oclif"
  ],
  "license": "AGPL",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "nandu",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topics": {
      "token:create": {
        "description": "create a new token for given user"
      },
      "token:ls": {
        "description": "list tokens for given user"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taskforcesh/nandu.git"
  },
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint . --ext .ts --config .eslintrc",
    "prepack": "rm -rf lib && tsc -b && oclif manifest && oclif readme",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "types": "lib/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "../../docs/gitbook/changelog-cli.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "yarn.lock",
            "../../docs/gitbook/changelog-cli.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}

{
  "name": "@nandu/dashboard",
  "version": "1.0.0",
  "description": "Dashboard for Nandu Open NPM Registry",
  "engines": {
    "node": ">=14"
  },
  "type": "module",
  "main": "index.js",
  "files": [
    "index.js",
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "VITE_API_HOST= vite build",
    "serve": "vite preview",
    "prepare": "npm run build"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "semantic-release": "^22.0.0",
    "tailwindcss": "^4.1.6",
    "typescript": "4.4.4",
    "vite": "^7.1.11",
    "vite-plugin-solid": "^2.2.6"
  },
  "dependencies": {
    "@felte/solid": "^1.2.3",
    "@felte/validator-yup": "^1.0.9",
    "@hope-ui/solid": "^0.6.7",
    "@solidjs/router": "^0.15.3",
    "@stitches/core": "^1.2.8",
    "@tailwindcss/vite": "^4.1.6",
    "@thisbeyond/solid-select": "^0.12.0",
    "solid-heroicons": "^2.0.3",
    "solid-js": "^1.9.6",
    "solid-transition-group": "^0.0.10",
    "whatwg-fetch": "^3.6.2",
    "yup": "^0.32.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taskforcesh/nandu.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "../../docs/gitbook/changelog-dashboard.md"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "yarn version --new-version ${nextRelease.version} --no-git-tag-version"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": true,
          "pkgRoot": "."
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "yarn.lock",
            "../../docs/gitbook/changelog-dashboard.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
